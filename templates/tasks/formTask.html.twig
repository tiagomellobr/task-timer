{% extends 'base.html.twig' %}
{% block body %}
<div class="row mt-2">
    <div class="col">
        <h2>Add Task</h2>
        {{ form_start(formTask) }}
            <div class="form-group">
                {{ form_row(formTask.title) }}
            </div>
            <div class="form-group">
                {{ form_row(formTask.description) }}
            </div>
        {{ form_end(formTask) }}
        {% if task.id %}
            <a href="{{ path("task_remove", {'task': task.id}) }}" class="btn btn-danger btn-block my-1">Remove</a>
        {% endif %}
    </div>
</div>
{% endblock %}